@model EWWebApp.Backend.EWBackend;

<h2>Encrypt a Word</h2>

<div class="container">
    @using (Html.BeginForm())
    {
        <div class="col-md-4 text-left">
            <div class="row">
                @Html.AntiForgeryToken()
                @Html.HiddenFor(m => m.Result)
                @Html.HiddenFor(m => m.NumberOfGuesses)
                @Html.HiddenFor(m => m.Guess)
                @Html.DisplayNameFor(m => m.Word)<text>&nbsp&nbsp</text>
                @Html.EditorFor(m => m.Word)
                @Html.ValidationMessageFor(m => m.Word)
            </div>
            <div class="col-md-4 col-md-offset-1 text-center">
                <div class="row">
                    <br />
                    <input type="submit" value="Submit" class="btn btn-succss" />
                </div>
            </div>
        </div>
    }
</div>